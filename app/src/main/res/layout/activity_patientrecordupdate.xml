<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".patientrecordupdate">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="229dp"
            app:layout_constraintBottom_toTopOf="@+id/textView19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:gravity="bottom"
            android:text="Basic Details"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/patientUpdateName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/patientUpdateName"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="50dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/patientUpdateDOB"
            app:layout_constraintEnd_toEndOf="@+id/textView19"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <EditText
            android:id="@+id/patientUpdateDOB"
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:hint="DOB"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/patientRecordUpdatebtn"
            app:layout_constraintEnd_toEndOf="@+id/patientUpdateName"
            app:layout_constraintStart_toStartOf="@+id/patientUpdateName"
            app:layout_constraintTop_toBottomOf="@+id/patientUpdateName" />

        <Button
            android:id="@+id/patientRecordUpdatebtn"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            android:text="Save Records"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/patientUpdateDOB"
            app:layout_constraintStart_toStartOf="@+id/patientUpdateDOB"
            app:layout_constraintTop_toBottomOf="@+id/patientUpdateDOB" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
