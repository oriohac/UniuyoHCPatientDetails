<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".NewPatientDiagnosis">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="304dp"
            android:layout_height="27dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/satoshi_variable"
            android:text="Health Record"
            android:textColor="@color/hintText"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/updateHealthRecordBloodGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/updateHealthRecordBloodGroup"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="56dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Blood Group"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/updateHealthRecordGenotype"
            app:layout_constraintEnd_toEndOf="@+id/textView31"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <EditText
            android:id="@+id/updateHealthRecordGenotype"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="56dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Genotype"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/updateHealthRecordDisabilities"
            app:layout_constraintEnd_toEndOf="@+id/updateHealthRecordBloodGroup"
            app:layout_constraintStart_toStartOf="@+id/updateHealthRecordBloodGroup"
            app:layout_constraintTop_toBottomOf="@+id/updateHealthRecordBloodGroup" />

        <EditText
            android:id="@+id/updateHealthRecordDisabilities"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="56dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Disabilities"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/updateHealthRecordAllergies"
            app:layout_constraintEnd_toEndOf="@+id/updateHealthRecordGenotype"
            app:layout_constraintStart_toStartOf="@+id/updateHealthRecordGenotype"
            app:layout_constraintTop_toBottomOf="@+id/updateHealthRecordGenotype" />

        <EditText
            android:id="@+id/updateHealthRecordAllergies"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="56dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Allergies"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintEnd_toEndOf="@+id/updateHealthRecordDisabilities"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/updateHealthRecordDisabilities"
            app:layout_constraintTop_toBottomOf="@+id/updateHealthRecordDisabilities" />

        <EditText
            android:id="@+id/updateHealthRecordEmail"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="304dp"
            android:layout_height="56dp"

            android:layout_marginTop="12dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Patient's Email"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textColor="@color/hintText"
            android:textColorHint="@color/hintText"
            app:layout_constraintBottom_toTopOf="@+id/updateHealthRecordbtn"
            app:layout_constraintEnd_toEndOf="@+id/updateHealthRecordAllergies"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/updateHealthRecordAllergies"
            app:layout_constraintTop_toBottomOf="@+id/updateHealthRecordAllergies" />

        <Button
            android:id="@+id/updateHealthRecordbtn"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@android:color/white"
            android:text="Save Records"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateHealthRecordEmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>