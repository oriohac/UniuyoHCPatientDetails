<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/adminemail"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adminname"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="351dp"
        android:layout_height="65dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/etborder"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@+id/adminusers"
        app:layout_constraintEnd_toEndOf="@+id/adminpassword"
        app:layout_constraintStart_toStartOf="@+id/adminpassword"
        app:layout_constraintTop_toBottomOf="@+id/adminpassword" />

        <Spinner
            android:id="@+id/adminusers"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dropdownbg"
            android:entries="@array/users_list"
            android:prompt="@string/users"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/adminname"
            app:layout_constraintStart_toStartOf="@+id/adminname"
            app:layout_constraintTop_toBottomOf="@+id/adminname" />

        <Button
            android:id="@+id/AdminAddUserbtn"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:text="Add User"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/AdminUpdateUserbtn"
            app:layout_constraintEnd_toEndOf="@+id/adminPhone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/adminPhone"
            app:layout_constraintTop_toBottomOf="@id/adminPhone" />

        <Button
            android:id="@+id/AdminUpdateUserbtn"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:text="Update User"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/AdminViewUserbtn"
            app:layout_constraintEnd_toEndOf="@+id/AdminAddUserbtn"
            app:layout_constraintStart_toStartOf="@+id/AdminAddUserbtn"
            app:layout_constraintTop_toBottomOf="@+id/AdminAddUserbtn" />

        <Button
            android:id="@+id/AdminDeleteUserbtn"
            android:layout_width="168dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="32dp"
            android:text="Delete User"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/AdminViewUserbtn"
            app:layout_constraintStart_toStartOf="@+id/AdminUpdateUserbtn"
            app:layout_constraintTop_toBottomOf="@+id/AdminUpdateUserbtn" />

        <Button
            android:id="@+id/AdminViewUserbtn"
            android:layout_width="168dp"
            android:layout_height="65dp"
            android:layout_marginBottom="32dp"
            android:text="View User"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/AdminUpdateUserbtn"
            app:layout_constraintStart_toEndOf="@+id/AdminDeleteUserbtn"
            app:layout_constraintTop_toTopOf="@+id/AdminDeleteUserbtn" />

        <EditText
            android:id="@+id/adminPhone"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColorHint="?attr/colorOnPrimary"
            app:layout_constraintBottom_toTopOf="@id/AdminAddUserbtn"
            app:layout_constraintEnd_toEndOf="@+id/adminusers"
            app:layout_constraintStart_toStartOf="@+id/adminusers"
            app:layout_constraintTop_toBottomOf="@+id/adminusers" />

        <EditText
            android:id="@+id/adminpassword"
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/etborder"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="?attr/colorOnPrimary"
            app:layout_constraintBottom_toTopOf="@id/adminname"
            app:layout_constraintEnd_toEndOf="@+id/adminemail"
            app:layout_constraintStart_toStartOf="@+id/adminemail"
            app:layout_constraintTop_toBottomOf="@id/adminemail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>