<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="347dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Enter The code sent to your number to cnfirm it is you."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/enterotp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterotp"
        android:layout_width="351dp"
        android:layout_height="62dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/etborder"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/btnsubmitotp"
        android:layout_width="355dp"
        android:layout_height="62dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="16dp"
        android:text="Submit OTP"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/enterotp"
        app:layout_constraintStart_toStartOf="@+id/enterotp"
        app:layout_constraintTop_toBottomOf="@+id/enterotp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>