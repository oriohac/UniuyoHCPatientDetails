<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Patient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/patientname"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/hintText"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientDOB"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/patientDOB"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/hintText"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientemail"
            app:layout_constraintEnd_toEndOf="@+id/patientname"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/patientemail"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/hintText"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientPhone"
            app:layout_constraintEnd_toEndOf="@+id/patientDOB"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <!--            tools:srcCompat="@tools:sample/avatars"-->


        <Button
            android:id="@+id/PatientViewRecordbtn"
            android:layout_width="348dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/white"
            android:text="View Health Records"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/PatientEditRecordbtn"
            app:layout_constraintStart_toStartOf="@+id/PatientEditRecordbtn"
            app:layout_constraintTop_toBottomOf="@+id/PatientEditRecordbtn" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="251dp"
            android:src="@drawable/baseline_person_24"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:text="Basic Details"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/patientname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="60dp"
            android:gravity="center_vertical"
            android:text="Name:"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/patientname"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="88dp"
            android:gravity="center_vertical"
            android:text="DOB"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/patientDOB"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="72dp"
            android:gravity="center_vertical"
            android:text="Email:"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintEnd_toStartOf="@+id/patientemail"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="64dp"
            android:gravity="center_vertical"
            android:text="Phone:"
            android:textColor="@color/hintText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/PatientEditRecordbtn"
            app:layout_constraintEnd_toStartOf="@+id/patientPhone"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/PatientEditRecordbtn"
            android:layout_width="348dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Edit Records"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/PatientViewRecordbtn"
            app:layout_constraintEnd_toEndOf="@+id/patientPhone"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/patientPhone"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginBottom="21dp"
            android:gravity="center_vertical"
            android:textColor="@color/hintText"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/PatientEditRecordbtn"
            app:layout_constraintEnd_toEndOf="@+id/patientemail"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView15" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>