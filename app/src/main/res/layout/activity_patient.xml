<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/patientname"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientDOB"
            app:layout_constraintEnd_toEndOf="@+id/patientDOB"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/patientDOB"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientemail"
            app:layout_constraintEnd_toEndOf="@+id/patientemail"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/patientname" />

        <TextView
            android:id="@+id/patientemail"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientID"
            app:layout_constraintEnd_toEndOf="@+id/patientID"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/patientDOB" />

        <TextView
            android:id="@+id/patientID"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientPhone"
            app:layout_constraintEnd_toEndOf="@+id/patientPhone"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/patientemail" />

        <TextView
            android:id="@+id/patientBloodGroup"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/PatientEditRecordbtn"
            app:layout_constraintEnd_toEndOf="@+id/PatientEditRecordbtn"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/patientPhone" />

        <Button
            android:id="@+id/PatientViewRecordbtn"
            android:layout_width="348dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:text="View Health Records"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/PatientEditRecordbtn"
            app:layout_constraintStart_toStartOf="@+id/PatientEditRecordbtn"
            app:layout_constraintTop_toBottomOf="@+id/PatientEditRecordbtn" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:text="Blood Group:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/PatientEditRecordbtn"
            app:layout_constraintEnd_toStartOf="@+id/patientBloodGroup"
            app:layout_constraintStart_toStartOf="@+id/PatientEditRecordbtn"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="251dp"
            android:src="@drawable/uniuyodark"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<!--            tools:srcCompat="@tools:sample/avatars"-->


        <TextView
            android:id="@+id/textView2"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:text="Basic Details"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/patientname"
            app:layout_constraintEnd_toEndOf="@+id/patientname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="66dp"
            android:gravity="center_vertical"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/patientname"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="94dp"
            android:gravity="center_vertical"
            android:text="DOB"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/patientDOB"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="77dp"
            android:gravity="center_vertical"
            android:text="Email:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/patientemail"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="108dp"
            android:gravity="center_vertical"
            android:text="ID:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintEnd_toStartOf="@+id/patientID"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="70dp"
            android:gravity="center_vertical"
            android:text="Phone:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView17"
            app:layout_constraintEnd_toStartOf="@+id/patientPhone"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/PatientEditRecordbtn"
            android:layout_width="348dp"
            android:layout_height="60dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="34dp"
            android:text="Edit Records"
            android:textSize="16sp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/PatientViewRecordbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patientBloodGroup" />

        <TextView
            android:id="@+id/patientPhone"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/patientBloodGroup"
            app:layout_constraintEnd_toEndOf="@+id/patientBloodGroup"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/patientID" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>